<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weapon</title>
  </head>
  <body style="margin: auto; max-width: 960px">
    <%data.forEach(e=>{%>
    <div
      style="
        display: flex;
        background-color: aliceblue;
        border: solid black 2px;
        max-width: 800px;
      "
    >
      <div
        style="
          display: block;
          border: solid black 2px;
          background-color: antiquewhite;
          margin: 10px;
          padding: 5px 10px;
        "
      >
        <h2><%=e.displayName%></h2>
        <img src="<%=e.displayIcon%>" />
        <div>
          <h4><%=e.category%></h4>
        </div>
      </div>
      <div
        style="
          display: block;
          border: solid black 2px;
          background-color: antiquewhite;
          margin: 10px;
          padding: 5px 10px;
          width: 250px;
        "
      >
        <table border="solid black 1px"><br/>
        <h3>Properties</h3>
          <tr>
            <td>Fire Rate</td>
            <td><%=e['WeaponStat.fireRate']%></td>
          </tr>
          <tr>
            <td>Magazine Size</td>
            <td><%=e['WeaponStat.magazineSize']%></td>
          </tr>
          <tr>
            <td>Run Speed Multiplier</td>
            <td><%=e['WeaponStat.runSpeedMultiplier']%></td>
          </tr>
          <tr>
            <td>Reload equipTime</td>
            <td><%=e['WeaponStat.reloadTime']%></td>
          </tr>
          <tr>
            <td>Equip equipTime</td>
            <td><%=e['WeaponStat.equipTime']%></td>
          </tr>
          <tr>
            <td>Accuracy</td>
            <td><%=e['WeaponStat.accuracy']%></td>
          </tr>
        </table>
      </div>
    </div>
    <%})%>
  </body>
</html>
